---
import MainHead from "../components/MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

const { content, frontmatter } = Astro.props;
const { credit } = frontmatter;
---

<html lang={content.lang || "en"}>
  <head>
    <MainHead title={content.title} description={content.description} />
    <style>
      .hero {
        padding: 8rem;
        display: flex;
        background-color: var(--t-fg);
        background-repeat: no-repeat;
        background-size: cover;
        min-height: 25vw;
        color: white;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }

      .tag {
        margin-left: 0.5em;
        margin-right: 0.5em;
        text-transform: uppercase;
      }

      .tag:nth-of-type(1n) {
        color: var(--c-green);
      }
      .tag:nth-of-type(2n) {
        color: var(--c-orange);
      }
      .tag:nth-of-type(3n) {
        color: var(--c-blue);
      }
      .tag:nth-of-type(4n) {
        color: var(--c-pink);
      }

      .title {
        font-size: var(--f-u10);
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 0.0625em;
      }

      .leadIn {
        padding-top: 4em;
        color: var(--t-bg);
        background-color: var(--t-fg);
        text-align: center;
      }

      .tagline {
        font-weight: 300;
        font-size: var(--f-u3);
        line-height: 1.5;
      }

      .content {
        font-size: var(--f-u1);
        line-height: 2.2;
        max-width: 50em;
        margin: auto;
      }

      .wrapper {
        padding-bottom: 4em;
        margin-bottom: 4em;
      }

      footer {
        text-align: center;
      }

      .seeMore {
        display: inline-block;
        border: 3px solid currentColor;
        padding: 0.5em 1em;
        font-weight: 700;
        text-transform: uppercase;
        text-decoration: none;
        transition: transform 300ms cubic-bezier(0, 0.4, 0.6, 1),
          border-color 1s linear;
        transform: translateY(25%);
      }

      .seeMore:hover {
        transform: translateY(0);
        border-color: rgba(255, 255, 255, 0.625);
        display: inline-block;
        border: 3px solid currentColor;
        padding: 0.5em 1em;
        font-weight: 700;
        text-transform: uppercase;
        text-decoration: underline;
      }

      .imageCredit {
        font-size: var(--f-u0);
        color: var(--t-bg);
        text-align: center;
        margin-top: 1rem;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <Nav />
    <header style={`background-image:url(${content.img})`} class="hero">
      <h1 class="title">{content.title}</h1>
    </header>
    <div class="leadIn">
      <div class="wrapper">
        {content.tags.map((t: string) => <span class="tag">{t}</span>)}
        <h3 class="tagline">{content.description}</h3>
      </div>
    </div>
    <div class="wrapper">
      <div class="content"><slot /></div>
    </div>
    <footer>
      <a href="/experiences" class="seeMore">See More</a>
      <div class="imageCredit"><a href={credit}>Image credit</a></div><a
        href={credit}
      >
      </a>
    </footer><a href={credit}>
      <Footer />
    </a>
  </body>
</html>
